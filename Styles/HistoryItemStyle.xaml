<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 定义本地颜色资源，避免跨文件依赖 -->
    <Color x:Key="LocalPrimaryBlueColor">#110078D7</Color>
    <Color x:Key="LocalLightBlueColor">#E6F2FA</Color>
    <Color x:Key="LocalGlowBlueColor">#40A9FF</Color>
    <Color x:Key="LocalTextPrimaryColor">#262626</Color>
    <Color x:Key="LocalTextSecondaryColor">#595959</Color>
    <Color x:Key="LocalRedColor">#FF6B6B</Color>
    <Color x:Key="LocalDarkRedColor">#FF5252</Color>

    <SolidColorBrush x:Key="LocalPrimaryBlue" Color="{StaticResource LocalPrimaryBlueColor}"/>
    <SolidColorBrush x:Key="LocalLightBlue" Color="{StaticResource LocalLightBlueColor}"/>
    <SolidColorBrush x:Key="LocalTextPrimary" Color="{StaticResource LocalTextPrimaryColor}"/>
    <SolidColorBrush x:Key="LocalTextSecondary" Color="{StaticResource LocalTextSecondaryColor}"/>
    <SolidColorBrush x:Key="LocalRed" Color="{StaticResource LocalRedColor}"/>
    <SolidColorBrush x:Key="LocalDarkRed" Color="{StaticResource LocalDarkRedColor}"/>

    <!-- 本地按钮模板 -->
    <ControlTemplate TargetType="Button" x:Key="LocalButtonTemplate">
        <Border Name="back" 
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="4">
            <ContentControl Content="{TemplateBinding Content}" 
                          FontFamily="Segoe UI"  
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center"
                          Foreground="{StaticResource LocalTextPrimary}"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource LocalLightBlue}" TargetName="back"/>
                <Setter Property="BorderBrush" Value="{StaticResource LocalPrimaryBlue}" TargetName="back"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#D0E8FF" TargetName="back"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- 历史记录区域样式 -->
    <Style x:Key="HistorySectionStyle" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#F5F9FF" Offset="0"/>
                    <GradientStop Color="#FAFCFF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 历史记录标题栏样式 -->
    <Style x:Key="HistoryTitleStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F8FBFF" Offset="0"/>
                    <GradientStop Color="#ECF5FF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#DEEBFF"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="15,10"/>
    </Style>

    <!-- 历史记录清除按钮样式 -->
    <Style x:Key="ClearHistoryButtonStyle" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F7F9FF" Offset="0"/>
                    <!-- 浅蓝色 -->
                    <GradientStop Color="#EDF2FF" Offset="1"/>
                    <!-- 稍深的浅蓝 -->
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#2F54EB"/>
        <!-- 蓝色文字 -->
        <Setter Property="BorderBrush" Value="#ADC6FF"/>
        <!-- 浅蓝色边框 -->
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template" Value="{StaticResource LocalButtonTemplate}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FF6B8E" Offset="0"/>
                            <!-- 悬停时变红色 -->
                            <GradientStop Color="#FF4757" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#FF4757"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 历史记录列表项样式 -->
    <Style x:Key="HistoryItemStyle" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Name="ItemBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#E8F4FF"
                            BorderThickness="0,0,0,1"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="4"
                            Margin="2,1">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource LocalLightBlue}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource LocalPrimaryBlue}" TargetName="ItemBorder"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="{StaticResource LocalPrimaryBlueColor}" Offset="0"/>
                                        <GradientStop Color="#550066CC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 历史记录列表样式 -->
    <Style x:Key="HistoryListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource LocalTextPrimary}"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="HasItems" Value="False">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBox">
                            <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6">
                                <TextBlock Text="暂无打开记录" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource LocalTextSecondary}"
                                           FontStyle="Italic"
                                           FontSize="14"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>