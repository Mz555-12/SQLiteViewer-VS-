<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:SQLiteViewer.Converters">

    <!--<converters:FileIconConverter x:Key="FileIconConverter"/>-->
    <FontFamily x:Key="iconfont">
        pack://application:,,,/SQLiteViewer;component/Assets/Fonts/#iconfont
    </FontFamily>
    
    <ControlTemplate TargetType="Button" x:Key="ButtonTemplate">
        <Border Background="#44FFFFFF" Name="back">
            <ContentControl Content="{TemplateBinding Content}" FontFamily="{StaticResource iconfont}"  VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>
        <ControlTemplate.Triggers>
            <!--顺序不能写反-->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#EEE" TargetName="back"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#AAA" TargetName="back"/>
            </Trigger>

        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>