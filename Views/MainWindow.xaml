<Window x:Class="SQLiteViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteViewer"
        xmlns:converters="clr-namespace:SQLiteViewer.Converters"
        xmlns:models="clr-namespace:SQLiteViewer.Models"
        mc:Ignorable="d"
        Title="SQLiteViewer" Height="540" Width="797" ResizeMode="NoResize"  FontSize="13.5" FontWeight="Normal" FontFamily="Microsoft YaHei" Background="{x:Null}" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/CommonStyles.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
            <converters:FileIconConverter x:Key="FileIconConverter"/>
        </ResourceDictionary>

    </Window.Resources>
    <Border Margin="5" Background="White" >
        <Border.Effect>
            <DropShadowEffect  BlurRadius="10" ShadowDepth="0" Direction="0.3" Color="Gray" Opacity="0.7"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border BorderThickness="0,0,0,2" BorderBrush="Gray">
                        <Grid Background="#00FFFFFF"  MouseLeftButtonDown="RowDefinition_MouseLeftButtonDown" >
                            <Label Content="SQLiteViewer V1.0" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="13" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                                <Border Height="30" Width="40"  VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Border BorderBrush="Gray" BorderThickness="0" Width="26"  HorizontalAlignment="Center" Margin="0,1" Name="border_top">
                                        <Button Template="{StaticResource ButtonTemplate}" Content="&#xe67b;" FontWeight="Bold"   FontSize="19" Click="TopWindow_Click" />
                                    </Border>
                                </Border>


                                <!--<Button Height="30" Width="40" Name="btn_setbase" Template="{StaticResource ButtonTemplate}" Content="&#xe62e;" FontWeight="Bold" FontSize="19" 
                                Command="{Binding CloseSetBaseViewCommand}"/>-->

                                <Button Height="30" Width="40" Template="{StaticResource ButtonTemplate}" Content="&#xe650;" Click="Minimum_Click"/>
                                <Button Height="30" Width="40" Template="{StaticResource ButtonTemplate}" Content="&#xe601;" FontWeight="Bold" 
                                Command="{Binding CloseMainWindowCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>
            </Grid>

            <Grid Grid.Row="1" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧可折叠面板 -->
                <Grid Grid.Column="0" Background="#EEE">
                    <!-- 添加右键菜单 -->
                    <Grid.ContextMenu >
                        <ContextMenu Width="130" HorizontalOffset="130" VerticalOffset="1">
                            <MenuItem Header="打开文件" Command="{Binding OpenFileCommand}" CommandParameter="file"/>
                            <MenuItem Header="打开文件夹" Command="{Binding OpenFileCommand}"/>
                        </ContextMenu>
                    </Grid.ContextMenu>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 标题栏 -->
                    <Border Background="#DDD" Padding="10,5" BorderBrush="#CCC" BorderThickness="0,0,0,1" Margin="0,0,0,5">
                        <TextBlock  Text="文件浏览器" FontWeight="Bold" Name="currentFolder_text"/>
                    </Border>

                    <!-- 文件树 -->
                    <TreeView Grid.Row="1" 
              ItemsSource="{Binding FileExplorerViewModel.FileSystemItems}"
              BorderThickness="0"
              Background="Transparent"
              Name="FileTreeView"
              MouseDoubleClick="TreeView_MouseDoubleClick"
              ScrollViewer.VerticalScrollBarVisibility="Hidden"
               ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                        <!-- 在 TreeView 上处理双击事件 -->

                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <EventSetter Event="Expanded" Handler="TreeViewItem_Expanded"/>
                                <EventSetter Event="Collapsed" Handler="TreeViewItem_Collapsed"/>
                                <!-- 移除 MouseDoubleClick 事件绑定 -->
                            </Style>
                        </TreeView.ItemContainerStyle>

                        <TreeView.Resources>
                            <!-- 文件夹样式 -->
                            <HierarchicalDataTemplate DataType="{x:Type models:FileSystemItem}" 
                                      ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding IsDirectory, Converter={StaticResource FileIconConverter}}" 
                               Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                </Grid>

                <!-- 分隔条 -->
                <GridSplitter Grid.Column="1" 
                  Width="3" HorizontalAlignment="Stretch"
                  Background="DarkGray" ResizeBehavior="PreviousAndNext"
                  ResizeDirection="Columns"/>

                <!-- 右侧面板 -->
                <Grid Grid.Column="2">

                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
